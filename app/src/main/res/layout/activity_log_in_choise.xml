<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_bg2">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">


                <ImageView
                    android:id="@+id/iv_choice_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50sp"
                    android:src="@mipmap/logo" />


                <TextView
                    android:id="@+id/tv_registration_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_choice_logo"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40sp"
                    android:layout_marginBottom="30sp"
                    android:text="Register"
                    android:textColor="@color/login_choice_text_color"
                    android:textSize="@dimen/login_choice_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_login_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_choice_logo"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40sp"
                    android:layout_marginBottom="30sp"
                    android:text="Login"
                    android:textColor="@color/login_choice_text_color"
                    android:textSize="@dimen/login_choice_text_size"
                    android:textStyle="bold" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>