<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/events_bg_color">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="290sp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/iv_event_image"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/car_img1"/>
                </FrameLayout>


                <LinearLayout
                    android:id="@+id/ll_drag_race"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="90sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_event_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drag race"
                        android:textColor="@color/white" />


                    <TextView
                        android:id="@+id/tv_event_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Splits wheels"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_event_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Lorem ipsum dolor sit amet,consectertur \nadipiscing elit,sed do eiusmod tempor."
                        android:textColor="@color/white" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_drag_race"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:src="@mipmap/event_icon" />


                <TextView
                    android:id="@+id/tv_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_drag_race"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@id/iv_event"
                    android:gravity="center_vertical"
                    android:text="November 11 | 11:00 AM"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_social"
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="240sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/round_events_bg">


                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40sp"
                    android:text="Jamees Routes"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_user_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:drawableLeft="@drawable/navigation"
                    android:text=" London, UK" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:layout_above="@+id/ll_social"
                    android:layout_marginBottom="20sp"
                    android:background="@color/view_line_color" />

                <LinearLayout
                    android:id="@+id/ll_social"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/facebook_gray_icon" />


                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_login_social"
                        android:layout_weight="1"
                        android:src="@mipmap/google_gray_icon" />


                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_login_social"
                        android:layout_weight="1"
                        android:src="@mipmap/twitter_gray_icon" />

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_login_social"
                        android:layout_weight="1"
                        android:src="@mipmap/instagram_gray_icon" />

                </LinearLayout>


            </RelativeLayout>


            <Button
                android:id="@+id/btn_join_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="210sp"
                android:layout_marginTop="215sp"
                android:layout_marginRight="60sp"
                android:background="@drawable/round_brown_bg"
                android:text="JOIN EVENT"
                android:textColor="@color/white" />


            <LinearLayout
                android:id="@+id/ll_what_is_this_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_social"
                android:layout_marginTop="20sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="What is this events about"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_sed_do_eiusmod_tempor_incididunt_ut_labore_et_dolore_magna_aliqua_ut_enim_ad_minim_veniam_quis_nostrud_exercitation_ullamco_laboris_nisi_ut_aliquip_ex_ea_commodo_consequat" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_racers"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@+id/ll_what_is_this_events"
                android:layout_marginTop="20sp"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="20sp"
                android:text="Racers"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_racers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_racers" />

            <TextView
                android:id="@+id/tv_people_comming"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@+id/rv_racers"
                android:layout_marginTop="15sp"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="20sp"
                android:text="People Commming"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_people_comming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_people_comming" />


        </RelativeLayout>


    </ScrollView>


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:src="@drawable/left_arrow" />


</RelativeLayout>