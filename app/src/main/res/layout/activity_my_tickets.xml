<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/events_bg_color">

    <ImageView
        android:id="@+id/iv_booking_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/dark_back_arrow" />


    <TextView
        android:id="@+id/tv_book_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_booking_back"
        android:layout_marginTop="10sp"
        android:paddingLeft="20sp"
        android:text="My Tickets"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">
        <include layout="@layout/custom_my_tickets_layout"/>
    </RelativeLayout>




</RelativeLayout>