<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_my_tickets"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="20sp"
        android:scaleType="fitXY"
        android:layout_marginTop="20sp"
        android:src="@mipmap/instagram_gray_icon"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_my_tickets"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="10sp"
        android:text="SPLITS WHEELS"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_drag_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_my_tickets"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="10sp"
        android:text="Drag Racer"
        android:textSize="16sp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/tv_booked_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_my_tickets"
        android:layout_below="@+id/tv_drag_race"
        android:layout_marginLeft="10sp"
        android:text="Booked:"
        android:textSize="16sp"
        android:textColor="@color/black"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_booked_title"
        android:layout_below="@+id/tv_drag_race"
        android:layout_marginLeft="5sp"
        android:text="John Smith"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:text="03-24-2019"/>


    <ImageView
        android:id="@+id/iv_event"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_below="@id/iv_my_tickets"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/event" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_my_tickets"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_toRightOf="@id/iv_event"
        android:gravity="center_vertical"
        android:text="November 11 | 11:00 AM"
        android:textColor="@color/hint_text_color"
        android:textSize="16sp" />





    <TextView
        android:id="@+id/tv_qty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_event"
        android:text="Qty"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_event"
        android:layout_toRightOf="@+id/tv_qty_title"
        android:text="2"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10sp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>