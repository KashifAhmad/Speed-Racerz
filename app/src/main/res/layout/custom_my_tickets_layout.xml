<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5sp"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_my_tickets"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@mipmap/instagram_gray_icon"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/iv_my_tickets"
                android:text="SPLITS WHEELS"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_race_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/iv_my_tickets"
                android:text="Drag Racer"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_booked_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_race_type"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/iv_my_tickets"
                android:text="Booked:"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_booked_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_race_type"
                android:layout_marginLeft="5sp"
                android:layout_toRightOf="@+id/tv_booked_title"
                android:text="John Smith"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/right_arrow"
                android:text="03-24-2019" />


            <ImageView
                android:id="@+id/iv_event"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@id/iv_my_tickets"
                android:layout_marginLeft="60sp"
                android:layout_marginTop="12dp"
                android:src="@drawable/event" />


            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_my_tickets"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/iv_my_tickets"
                android:gravity="center_vertical"
                android:text="November 11 | 11:00 AM"
                android:textColor="@color/hint_text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_qty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_event"
                android:layout_toRightOf="@id/iv_my_tickets"
                android:layout_marginBottom="20sp"
                android:text="Qty"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_event"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="20sp"
                android:layout_toRightOf="@+id/tv_qty_title"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>