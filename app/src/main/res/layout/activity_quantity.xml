<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techease.speedracerz.views.QuantityEventsActivity">





    <ImageView
        android:id="@+id/iv_booking_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/dark_back_arrow" />


    <TextView
        android:id="@+id/tv_book_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_booking_back"
        android:layout_marginTop="10sp"
        android:paddingLeft="20sp"
        android:text="Book Events"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/rl_tabs"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@+id/tv_book_events"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">


        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:background="@color/view_line_color" />


        <TextView
            android:id="@+id/tv_1"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:background="@drawable/circle_brown_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_brown_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/circle_brown_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_booking"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Booking"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Payment"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Review"
            android:textSize="16sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_payment_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_booking">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/rl_tabs"
        android:layout_margin="5sp"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rl_above"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@color/black">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:text="Show card details"
                    android:textColor="@color/white" />


                <ImageView
                    android:id="@+id/iv_down_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15sp"
                    android:src="@drawable/down_white_arrow" />


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10sp"
                    android:layout_toLeftOf="@+id/iv_down_arrow"
                    android:text="$176.55"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_profile_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_above">


                <ImageView
                    android:id="@+id/iv_race_image"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/car_img1" />


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_toRightOf="@+id/iv_race_image"
                    android:text="SPLIT WHEELS"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/iv_race_image"
                    android:text="Drag Racer"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="30sp"
                    android:src="@android:drawable/ic_menu_delete" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_add_qty"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_below="@+id/rl_profile_image">


                <TextView
                    android:id="@+id/tv_title_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40sp"
                    android:text="Qty"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/iv_remove_qty"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40sp"
                    android:layout_toRightOf="@id/tv_title_qty"
                    android:background="@drawable/round_corner_gray"
                    android:padding="8sp"
                    android:src="@drawable/ic_remove_qty_icon" />


                <TextView
                    android:id="@+id/tv_booking_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@+id/iv_remove_qty"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/iv_add_qty"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@id/tv_booking_qty"
                    android:background="@drawable/round_corner_gray"
                    android:padding="8sp"
                    android:src="@drawable/ic_add_qty_icon" />


                <TextView
                    android:id="@+id/tv_changed_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35sp"
                    android:layout_marginRight="40sp"
                    android:text="$120"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_add_qty"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="20sp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discount Code" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/round_line">


                    <EditText
                        android:id="@+id/et_promo_code"
                        android:paddingStart="10dp"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:hint="Code"
                        android:background="@android:color/transparent" />

                    <Button
                        android:id="@+id/btn_apply_code"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:background="@drawable/apply_button_bg"
                        android:text="APPLY" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtotal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_sub_total"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="$200"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discout"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0.00"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_grand_total"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="$200"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_continue_payment_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_register_bg"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>